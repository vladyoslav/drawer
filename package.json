{
  "name": "drawer",
  "version": "0.1.0",
  "description": "An unstyled draggable drawer component for React",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "prettier --check ./src",
    "lint:fix": "prettier --write ./src",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/!(*.css|*.svg)": [
      "eslint --fix",
      "prettier --ignore-unknown --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vladyoslav/drawer.git"
  },
  "author": "Vladislav Shalnev <vladislav.a.shalnevv@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vladyoslav/drawer/issues"
  },
  "homepage": "https://github.com/vladyoslav/drawer#readme",
  "keywords": [
    "react",
    "mobile",
    "drawer",
    "draggable",
    "sheet",
    "modal",
    "dialog",
    "unstyled",
    "headless"
  ],
  "peerDependencies": {
    "framer-motion": "^10.16.16",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@swc/core": "^1.3.101",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "3.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@radix-ui/react-compose-refs": "^1.0.1"
  }
}
